<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="VOIPClient.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Networks VOIP GUI" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label text="Enter your peer's IP Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField id="ipaddy" fx:id="ipaddy" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="localhost"/>
    <Button GridPane.columnIndex="0" GridPane.rowIndex="2" text="Connect" onAction="#ConnectToIP"/>
    <Text id="errorMSG" fx:id="errorMSG" text="" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
</GridPane>